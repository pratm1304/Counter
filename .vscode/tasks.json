{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "compile and run",
        "type": "shell",
        "command": "javac",
        "args": ["${file}"],
        "group": {
          "kind": "build",
          "isDefault": false
        }
      },
      {
        "label": "compile and run",
        "type": "shell",
        "command": "java",
        "args": ["${fileBasenameNoExtension}"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": {
          "owner": "java",
          "fileLocation": ["relative", "${fileDirname}"],
          "pattern": {
            "regexp": "^(.*):(\\d+):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "message": 3
          }
        }
      }
    ]
  }
  